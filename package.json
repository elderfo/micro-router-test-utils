{
  "name": "microrouter-test-server",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Chris Getsfred <cgetsfred@gmail.com>",
  "dependencies": {
    "microrouter": "^2.2.2",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "test-listen": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "codecov": "^2.3.0",
    "eslint": "^4.4.0",
    "eslint-config-elderfo": "^1.2.3",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.3",
    "micro": "~7.3.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "semantic-release": "^7.0.1"
  },
  "peerDependencies": {
    "micro": "~7.3.3"
  },
  "scripts": {
    "build": "rimraf dist/ && babel src --ignore *.test.js --out-dir dist --copy-files",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage && codecov",
    "lint": "eslint ./src",
    "ci": "npm-run-all test:ci lint build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged"
  },
  "jest": {
    "testPathIgnorePatterns": ["/node_modules/", "/examples/"],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "./coverage/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elderfo/microrouter-test-server.git"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "jest --bail --findRelatedTests",
      "eslint",
      "git add"
    ]
  }
}
